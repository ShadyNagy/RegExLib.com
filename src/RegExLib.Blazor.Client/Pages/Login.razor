@namespace RegExLib.Blazor.Client.Pages
@page "/login"

<div class="container">
    @if (ShowLoginFailed)
    {
        <div class="alert alert-danger">
            Login attempt failed.
        </div>
    }
    <h1> RegExlib Login</h1>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" placeholder="Username" class="form-control" @bind="@User.Username"/>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" placeholder="Password" class="form-control" @bind="@User.Password"/>
    </div>
    <button class="btn btn-primary" @onclick="@LoginUser">Login</button>
</div>